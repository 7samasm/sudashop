{
  "name": "hare",
  "version": "1.0.0-alpha.0",
  "description": "Based on Vue.js 2.x, Koa 2.x, Element-UI and Nuxt.js",
  "author": "Clark Du",
  "license": "MIT",
  "main": "dist/server-app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clarkdo/hare.git"
  },
  "scripts": {
    "dev": "cross-env DEBUG=nuxt:* nodemon -w server -w nuxt.config.js server/app.js",
    "dev:new": "cross-env NODE_ENV=development nodemon server/app.js --watch server",
    "dev:pm2": "pm2 start npm --name=hare -- dev",
    "test": "npm lint && npm build:client && ava --verbose --serial ",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "build": "npm run build:client && npm run build:server",
    "build:client": "nuxt build",
    "build:server": "rimraf dist/server && cpx \"{nuxt.config.js,server/**}\" dist",
    "start": "cross-env NODE_ENV=production node dist/server/app.js",
    "start:pm2": "pm2 start npm --name=hare -- start",
    "analyze": "nuxt build --analyze",
    "generate": "nuxt generate",
    "precommit": "lint-staged",
    "prepublishOnly": "npm lint && npm test && npm build:server",
    "release": "standard-version"
  },
  "lint-staged": {
    "{client,server,test}/**/*.{js,vue}": [
      "eslint --ext .js,.vue --ignore-path .gitignore"
    ]
  },
  "dependencies": {
    "@nuxtjs/auth": "^4.9.1",
    "@nuxtjs/axios": "^5.4.1",
    "@nuxtjs/moment": "^1.6.1",
    "@nuxtjs/proxy": "^2.0.1",
    "@nuxtjs/vuetify": "^1.11.2",
    "bcryptjs": "^2.4.3",
    "bunyan": "^1.8.12",
    "chart.js": "^2.8.0",
    "element-ui": "2.7.2",
    "express-validator": "^6.6.1",
    "js-cookie": "^2.2.0",
    "js-yaml": "^3.13.1",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-bunyan": "^1.0.2",
    "koa-bunyan-logger": "^2.1.0",
    "koa-compress": "^3.0.0",
    "koa-joi-router": "^6.0.2",
    "koa-jwt": "^4.0.0",
    "koa-proxies": "^0.8.1",
    "koa-router": "^7.4.0",
    "koa-session": "^5.11.0",
    "mkdirp": "^0.5.1",
    "mongoose": "^5.10.11",
    "mongoose-paginate-v2": "^1.3.10",
    "multer": "^1.4.2",
    "negotiator": "^0.6.2",
    "normalize.css": "^8.0.1",
    "nuxt": "^2.6.3",
    "nuxt-property-decorator": "^2.1.3",
    "svg-captcha": "^1.4.0",
    "vue-chartjs": "^3.4.2",
    "vue-clipboard2": "^0.3.0",
    "vue-currency-filter": "^5.2.0",
    "vue-i18n": "^8.11.2",
    "vuelidate": "^0.7.6",
    "xmlify": "^1.1.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^0.0.1",
    "ava": "^1.4.1",
    "babel-eslint": "^10.0.1",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-nuxt": "^0.4.3",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "lodash": "^4.17.11",
    "moxios": "^0.4.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "standard-version": "6.0.1"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  }
}
